{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "./modules/configuration/settings/*.json",
        "outDir": "./dist",
        "watchAssets": true
      },
      {
        "include": "./modules/mail/templates/*.hbs",
        "outDir": "./dist",
        "watchAssets": true
      }
    ]
  }
}
